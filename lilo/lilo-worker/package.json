{
  "name": "lilo-worker",
  "description": "api to generate and serve openapi specs with an assistant",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build --mode client && vite build",
    "deploy": "$npm_execpath run build && wrangler deploy --no-bundle",
    "db:touch": "wrangler d1 execute honc-d1-database --local --command='SELECT 1'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply honc-d1-database --local",
    "db:migrate:prod": "ENVIROMENT=production drizzle-kit migrate",
    "db:seed": "tsx seed.ts",
    "db:setup": "npm run db:touch && npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:studio": "drizzle-kit studio",
    "format": "biome check . --write",
    "keypair:generate": "tsx keypair-generate.ts"
  },
  "dependencies": {
    "@hono/oauth-providers": "^0.6.2",
    "@hono/zod-openapi": "^0.18.0",
    "@scalar/hono-api-reference": "^0.5.163",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.7",
    "jose": "^5.9.6",
    "vite": "^6.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@fiberplane/hono-otel": "workspace:*",
    "@hono/vite-build": "^1.1.1",
    "@hono/vite-dev-server": "^0.17.0",
    "@libsql/client": "^0.14.0",
    "drizzle-kit": "^0.28.1",
    "drizzle-seed": "^0.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "wrangler": "3.92.0"
  }
}
